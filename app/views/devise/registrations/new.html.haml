= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f|
  .form-heading
    %h2 Sign up
  .contrlo-group
    = f.input :email, :autofocus => true, placeholder: "Email address", class: 'controls'
    = f.input :password, placeholder: "Password"
    = f.input :password_confirmation, placeholder: "Confirm password"
    = f.input :role, collection: ['Admin', 'Manager', 'HR','Employee'], prompt: 'Select Role'
    = f.submit "Sign Up", class: "btn controls" 
  = render "devise/shared/links"
